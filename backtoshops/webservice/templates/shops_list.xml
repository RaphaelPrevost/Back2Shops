{% load l10n %}

<shops version="1.0">
	{% for shop in object_list %}
	<shop id="{{ shop.pk }}">
		<name>{{ shop.name }}</name>
		<catcher>{{ shop.catcher }}</catcher>
		<img url="{% if shop.image %}{{ shop.image.url }}{% endif %}" />
		<desc>{{ shop.description }}</desc>
		<addr>{{ shop.address }}</addr>
		<zip>{{ shop.zipcode }}</zip>
		<city>{{ shop.city }}</city>
		<country>FR</country>
		<location lat="{{ shop.latitude|unlocalize }}" long="{{ shop.longitude|unlocalize }}" />
	    <code upc="{% if shop.upc %}{{ shop.upc }}{% endif %}" />
	</shop>
	{% endfor %}
</shops>
